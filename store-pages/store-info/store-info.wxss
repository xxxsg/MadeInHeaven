/* pages/store-info/store-info.wxss */

/*页面整体信息*/
page{
  background-color:#f8f8f9;
  color: #495060;
  font-size: 35rpx;
}

/*包含页面内所有元素*/
.container{

}

/*店铺信息区域*/
.store-info{
  background: white;
  padding-bottom: 20rpx;
}

/*店名*/
.store-name{
  font-size: 80rpx;
  height: 100%;
  color: #1c2438;
  margin: 0 20rpx;
  text-align: center;
  /*超出隐藏*/
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

/*店铺的照片*/
.store-image{
  position: relative;
  width: 90%;
  height: 400rpx;
  margin: 20rpx 5% 0 5%;
  border-radius: 20rpx;
}

/*地址*/
.store-addr{
  padding-left: 50rpx;
  padding-right: 40rpx;
  font-size: 30rpx;
  /* 仅显示两行*/
  overflow: hidden;
  text-overflow: ellipsis;
  text-overflow: -o-ellipsis-lastline;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.solid{
  margin: 20rpx auto;
  width: 85%;
  border: 1rpx solid #dddee1;
}
/*简介栏*/
.store-intro{
  padding-left: 40rpx;
  padding-right: 30rpx;
  /* 仅显示两行*/
  overflow: hidden;
  text-overflow: ellipsis;
  text-overflow: -o-ellipsis-lastline;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

/*优惠信息*/
.store-intro-discount{
  text-align: center;
  padding-left: 40rpx;
  padding-right: 30rpx;
}

.store-intro-discount text{
  color: red
}

/*商品列表区域*/
.goods-list-area{
  margin-top: 30rpx; 
  width: 750rpx;
  height: 100%;
  display: flex;
  flex-flow: row wrap;
}

/*商品区域*/
.goods{
  background: white;
  margin: 20rpx auto;
  padding: 20rpx;
  float: left;
  width: 35%;
  height: auto;
  border: 1rpx solid #dddee1;
  border-top-right-radius: 30rpx;
  border-top-left-radius: 30rpx;
  display: flex;
  flex-direction: column;
}


/*商品图片*/
.goods-image{
  border-radius: 20rpx;
  width: 80%;
  margin:  20rpx auto;
  height: 200rpx;
}

/*商品名字*/
.goods-name{
  text-align: center;
  color: #1c2438;
  font-weight: 800;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

/*商品介绍*/
.goods-intro{
  margin-top: 10rpx;
  border-top: 1rpx solid #dddee1;
  /* 仅显示两行*/
  overflow: hidden;
  text-overflow: ellipsis;
  text-overflow: -o-ellipsis-lastline;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.price{
  margin-top: 10rpx;
  border-top: 1rpx solid #dddee1;
}

.price-origin{
  margin-top: 5rpx;
  border-top: 1rpx solid #dddee1;
  text-decoration: line-through;
}

.price-discoun{
  color: red;
}

